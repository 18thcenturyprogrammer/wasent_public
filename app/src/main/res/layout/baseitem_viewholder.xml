<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.centuryprogrammer18thwasentsingleland.manager.BaseItemFragmentViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBaseItemViewholder"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNameBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumPieceBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="0.5"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvProcessBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/etPriceBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/btnEditBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:enabled="true"
                android:gravity="center"
                android:text="@string/edit" />

            <Button
                android:id="@+id/btnOkBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/ok" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>
