<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserInvoiceHistoryVH"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/colorSecondary"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/loUserInvoiceHistoryVH"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvInvoiceIdUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvCreatedAtUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="8sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvDueDateTimeUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvPickedUpAtTimeUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvRackLocationUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvBalanceUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvTotalQtyUserInvoiceHistoryVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="10sp"
                android:textStyle="normal" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</layout>
