<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.centuryprogrammer18thwasentsingleland.drop_pickup.pickup.InvoiceOrderPickupFrgVM" />
        <variable
            name="frg"
            type="com.centuryprogrammer18thwasentsingleland.drop_pickup.pickup.InvoiceOrderPickupFrg" />
    </data>

    <LinearLayout
        android:id="@+id/loInvoiceOrderPickupVH"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/tvIdInvoiceOrderPickupVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvCreatedAtInvoiceOrderPickupVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvDueDateTimeInvoiceOrderPickupVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvRackLocationInvoiceOrderPickupVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBalanceInvoiceOrderPickupVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:gravity="center" />

        <TextView
            android:id="@+id/tvTotalQtyInvoiceOrderPickupVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:gravity="center" />

        <RadioGroup
            android:id="@+id/rbgTypePaymentInvoiceOrderVH"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <com.centuryprogrammer18thwasentsingleland.drop_pickup.pickup.ToggleAbleRadioButton
                android:id="@+id/rbInvoiceOrderFullpaidVH"
                style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:checked="false" />

            <com.centuryprogrammer18thwasentsingleland.drop_pickup.pickup.ToggleAbleRadioButton
                android:id="@+id/rbInvoiceOrderPrepaidVH"
                style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1" />

            <com.centuryprogrammer18thwasentsingleland.drop_pickup.pickup.ToggleAbleRadioButton
                android:id="@+id/rbInvoiceOrderPartialPaidVH"
                style="@android:style/Widget.Material.Light.CompoundButton.RadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1" />
        </RadioGroup>

    </LinearLayout>
</layout>
