<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TableLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:layout_weight="1">

            <!-- focus nextFocusForward, nextFocusDown imeoption next ref) https://stackoverflow.com/q/26457524/3151712 -->
            <EditText
                android:id="@+id/etFistNameEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/first_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:nextFocusDown="@+id/etLastNameEditCustomerFrg"
                android:nextFocusForward="@+id/etLastNameEditCustomerFrg" />

            <EditText
                android:id="@+id/etLastNameEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/last_name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:nextFocusDown="@+id/etPhoneNumEditCustomerFrg"
                android:nextFocusForward="@+id/etPhoneNumEditCustomerFrg" />

            <EditText
                android:id="@+id/etPhoneNumEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/phone_number"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:maxLength="14"
                android:nextFocusDown="@+id/etEmailEditCustomerFrg"
                android:nextFocusForward="@+id/etEmailEditCustomerFrg" />

            <EditText
                android:id="@+id/etEmailEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/email"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:nextFocusDown="@+id/etStreetEditCustomerFrg"
                android:nextFocusForward="@+id/etStreetEditCustomerFrg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etStreetEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="4"
                android:ems="10"
                android:hint="@string/street_address"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="30"
                android:nextFocusDown="@+id/etCityEditCustomerFrg"
                android:nextFocusForward="@+id/etCityEditCustomerFrg" />

            <EditText
                android:id="@+id/etCityEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/city"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="20"
                android:nextFocusDown="@+id/etStateEditCustomerFrg"
                android:nextFocusForward="@+id/etStateEditCustomerFrg" />

            <EditText
                android:id="@+id/etStateEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/state"
                android:importantForAutofill="no"
                android:inputType="text"
                android:maxLength="2"
                android:nextFocusDown="@+id/etZipEditCustomerFrg"
                android:nextFocusForward="@+id/etZipEditCustomerFrg" />

            <EditText
                android:id="@+id/etZipEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="2"
                android:ems="10"
                android:hint="@string/zipcode"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="5"
                android:nextFocusDown="@+id/etNoteEditCustomerFrg"
                android:nextFocusForward="@+id/etNoteEditCustomerFrg" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="4dp"
            android:layout_weight="1">

            <Switch
                android:id="@+id/swShirtEditCustomerFrg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical|end"
                android:text="@string/shirt_on_hanger_or_box" />

            <SeekBar
                android:id="@+id/skbStarchEditCustomerFrg"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:max="3"
                android:progress="0" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/etNoteEditCustomerFrg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/note"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="textMultiLine"
                android:maxLength="200"
                android:maxLines="3"
                android:nextFocusDown="@+id/btnEditCustomer"/>
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btnEditCustomer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="@string/edit"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>



</layout>