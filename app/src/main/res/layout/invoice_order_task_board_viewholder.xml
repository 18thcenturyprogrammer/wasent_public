<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.centuryprogrammer18thwasentsingleland.drop_pickup.TaskBoardFragmentVM" />
        <variable
            name="frg"
            type="com.centuryprogrammer18thwasentsingleland.drop_pickup.TaskBoardFragment" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTaskBoardVH"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:stateListAnimator="@animator/cardview_like_button_jump_low"
        app:cardBackgroundColor="@color/colorSecondary"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/loTaskBoardVH"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvInvoiceIdTaskBoardVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCreatedAtaskBoardVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDueDateTimeTaskBoardVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvRackLocationTaskBoardVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvBalanceTaskBoardVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvTotalQtyTaskBoardVH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:gravity="center" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</layout>
