<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.centuryprogrammer18thwasentsingleland.manager.PartialBaseItemFragmentVIewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPartialBaseItemViewholder"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNamePartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:enabled="true"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumPiecePartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProcessPartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:enabled="true"
                android:gravity="center"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDryPricePartialBaseItemViewholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvWetPricePartialBaseItemViewholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center" />
            </LinearLayout>

            <EditText
                android:id="@+id/etRatePartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberSigned|numberDecimal"
                android:maxLength="5" />

            <EditText
                android:id="@+id/etAmountPartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:gravity="center"
                android:inputType="numberSigned|numberDecimal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCalDryPricePartialBaseItemViewholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvCalWetPricePartialBaseItemViewholder"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:enabled="true"
                    android:gravity="center" />
            </LinearLayout>


            <Button
                android:id="@+id/btnEditPartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:enabled="true"
                android:text="@string/edit" />

            <Button
                android:id="@+id/btnOkPartialBaseItemViewholder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/ok" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>